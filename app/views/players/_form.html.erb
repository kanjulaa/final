<%= form_for(@player) do |f| %>
  <% if @player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :fullname %><br>
    <%= f.text_field :fullname %>
  </div>
  <div class="field">
    <%= f.label :country %><br>
        <%= f.text_field :country %>
  </div>
   
<div class="field">
<%= f.label :country_id %><br>
<%= f.select :country_id,
options_for_select(Country.all.collect {|a| ["#{a.name}", a.id]},
selected: (@player.country ? @player.country.id : Country.first.id)),
{} %>
</div>


  
  <div class="field">
    <%= f.label :match %><br>
    <%= f.number_field :match %>
  </div>
  <div class="field">
    <%= f.label :score %><br>
    <%= f.number_field :score %>
  </div>
  <div class="field">
    <%= f.label :strength %><br>
    <%= f.select :strength, options_for_select(@strengths.collect {|s| [s[0].humanize, s[0]]},selected: @player.strength), {} %>  
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
