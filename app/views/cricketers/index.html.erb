

<p id="notice"><%= notice %></p>
<h2>  # Crico Stats #</h2>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fullname</th>
      <th>Country</th>
      <th>Game</th>
      <th>Score</th>
      <th>Strength</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cricketers.each do |cricketer| %>
      <tr>
        <td><%= cricketer.name %></td>
        <td><%= cricketer.fullname %></td>
        <td><%= (cricketer.country.try(:name) || "NA") %></td>
        <td><%= cricketer.game %></td>
        <td><%= cricketer.score %></td>
        
				<td><%= image_tag cricketer.strength, class: "cricketer" %></td>
        
        <td><%= link_to 'Show', cricketer %></td>
        <td><%= link_to 'Edit', edit_cricketer_path(cricketer) %></td>
        <td><%= link_to 'Destroy', cricketer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<span class="btn">
  <%= link_to 'New Cricketer', new_cricketer_path %>
</span>

